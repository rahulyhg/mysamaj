<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="About Us"
        android:textSize="30dp" android:background="#069c88" android:textColor="#fff"/>
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />
    <TextView
        android:paddingTop="20dp"
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A2, 2nd Floor, Jay Tower, Ankur Complex Ankur X Road, Near Ankur Busstop, Naranpura Ahmedabad, Gujarat-380013"
        android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center"/>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/addressabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:info@gujaratInfotech.com"
        android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center"/>
  

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91-79-27452276"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Fax"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="+91-79-27414250"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>